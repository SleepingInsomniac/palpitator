<section class="playlist" ng-controller="PlaylistController">
  <header>
    <button ng-click="playlist.list = []">Clear</button>
    <button>Shuffle</button>
    <!-- <h1>Playlist</h1> -->
  </header>
  <ol dragula="'playlist'" dragula-model="songs">
    <li ng-repeat="song in playlist.list track by $index">
      <div class="item" data-track="{{song.track}}" ng-class="{lit: song == player.song}" ng-click="playSong(song)">
        {{song.title}}
      </div>
      <button class="danger no-stretch" ng-click="removeSong($index)">
        <i class="fa fa-close"></i>
      </button>
    </li>
  </ol>
</section>
