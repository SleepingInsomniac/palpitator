<section class="library-artists">
  <header>
    <!-- <h1>Artists</h1> -->
    <div class="search">
      <input ng-model="artistsFilter" type="text" placeholder="Search Artists">
      <button class="remove no-stretch" ng-click="artistsFilter = ''"><i class="fa fa-close"></i></button>
    </div>
  </header>
  <ul>
    <li ng-repeat="artist in artists | filter: artistsFilter">
      <div>
        <div class="item" ng-class="{lit: selectedArtist == artist}" ng-click="getAlbums(artist)">{{::artist.name}}</div>
        <button class="success no-stretch" ng-click="addArtistToPlaylist(artist)">
          <i class="fa fa-plus"></i>
        </button>
      </div>
    </li>
  </ul>
</section>
