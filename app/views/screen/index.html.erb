<!doctype html>
<html lang="en" ng-app="pulpitator">
  <head>
    <meta charset="utf-8">
    <base href="/">
    
    <title>Pulpitator</title>
    <link href="/assets/styles.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="/assets/vendor.js" type="text/javascript"></script>
    <script src="/assets/scripts.min.js" type="text/javascript"></script>
  </head>
  <body ng-controller="AppController">
    <audio></audio>
    <div class="app-container">
      
      <header class="player" ng-controller="PlayerController">
        <div class="speaker speaker-left">&nbsp;</div>
        <div class="controls">
          <div class="display">
            <h3>{{ currentSong.title }}</h3>
            <aside class="display-info">
              <span class="display-info-artist">Artist</span>
              <span class="display-info-album">Album</span>
            </aside>
          </div>
          <div class="buttons">
            <button class="btn-previous"><i class="fa fa-fast-backward"></i></button>
            <button class="btn-play"><i class="fa fa-play"></i></button>
            <button class="btn-next"><i class="fa fa-fast-forward"></i></button>
          </div>
        </div>
        <div class="speaker speaker-right">&nbsp;</div>
      </header>
      
      <main>
        <section class="playlist" ng-controller="PlaylistController">
          <header>
            <h1>Playlist</h1>
          </header>
          <ul>
            <li ng-repeat="song in songs">{{song.title}}</li>
          </ul>
        </section>
      </main>
      
      <footer>
        &copy; <%= Time.now.year %>
      </footer>
      
    </div>
  </body>
</html>