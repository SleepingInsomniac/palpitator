<!doctype html>
<html lang="en" ng-app="pulpitator">
  <head>
    <meta charset="utf-8">
    <base href="/">
    
    <title>Pulpitator</title>
    <link href="/assets/styles.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="/assets/vendor.js" type="text/javascript"></script>
    <script src="/assets/scripts.min.js" type="text/javascript"></script>
  </head>
  <body ng-controller="AppController">
    <audio></audio>
    <div class="app-container">
      
      <%= render partial: 'player.html' %>
      
      <main>
        <section class="playlist" ng-controller="PlaylistController">
          <header>
            <h1>Playlist</h1>
          </header>
          <ul>
            <li ng-repeat="song in songs">{{song.title}}</li>
          </ul>
        </section>
      </main>
      
      <footer>
        &copy; <%= Time.now.year %>
      </footer>
      
    </div>
  </body>
</html>